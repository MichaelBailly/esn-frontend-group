.modal.group-modal.full-screen
  form(name="form", ng-submit="$ctrl.update(); $hide()")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-label="{{ 'Close' | translate }}", ng-click="$hide()")
            span(aria-hidden="true") &times;
          h4.modal-title {{ 'Edit mailing list information' | translate }}
        .modal-body
          group-form(ng-if="$ctrl.group", group="$ctrl.group", update-mode)
        .modal-footer.flex
          .flex-vertical-centered.flex-end
            button.btn.btn-link(type="button", ng-click="$hide()")
              | {{ 'Cancel' | translate }}
            button.btn.btn-primary(type="submit", ng-disabled="form.$invalid || form.$pristine || form.$pending")
              | {{ 'Save' | translate }}
